{
  "compilerOptions": {
    "listEmittedFiles": true,
    "listFiles": false,
    "outDir": ".",
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": ["typings"],
    "typescript": "typescript/lib/typescript"
  },
  "build": { // for [ local, dist ]
    "MinCVer": [ 121, 102 ], // keep dist to be 102 : the release version
    "MinFFVer": [ 119, 101 ],
    "BTypes": [ 1, 1 ], // [ Chrome, Chrome ]
    "OS": [ 7, 7 ],
    "DetectAPIOnFirefox": [1, 0],
    "NDEBUG": [ 0, 1 ],
    "Mangle": [ 0, 1 ],
    "Inline": [ 0, 1 ]
  },
  "extends": "../tsconfig.base.json"
}
